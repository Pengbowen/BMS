<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<!-- 批量上传文件 -->
	<package name="batchupload" namespace="/batchupload" extends="json-default">
		<!-- 文件上传的拦截器栈 -->
		<interceptors>
			<interceptor-stack name="fileUploadStack">
				<interceptor-ref name="fileUpload">
					<param name="maximumSize">409600</param>
				</interceptor-ref>
				<interceptor-ref name="basicStack" /></interceptor-stack>
		</interceptors>
		
		<default-interceptor-ref name="fileUploadStack"></default-interceptor-ref>
		<action name="batchupload" class="com.lanyuan.actionapi.commonupload.UploadAction">
			<result name="success" type="json"></result>
			<result name="input" type="json"></result>
			<interceptor-ref name="fileUploadStack"></interceptor-ref>
		</action>
	</package>
</struts>