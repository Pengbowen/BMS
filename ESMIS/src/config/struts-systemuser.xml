<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
    <!-- 用户登录 -->
    <package name="manageLogin" namespace="/login" extends="GlobalInterceptor">       
       <!-- 登陆：username，password 登陆成功返回 userId -->
       <action name="login" class="com.lanyuan.web.LoginAuthentication.ILoginAction" method="Login">
       		 <result name="success">/index.jsp</result>
       </action>
       
       <!-- 后台退出系统 -->
       <action name="loginOut" class="com.lanyuan.web.LoginAuthentication.ILoginOutAction" method="LoginOut">
             <result name="success" type="redirect">/</result>
       </action>  
       
       <!-- 修改密码 -->
       <action name="modifyPwd" class="com.lanyuan.web.LoginAuthentication.IModifyPwd" method="modifyPwd"></action>   
       
       <!--根据ID获取用户信息  -->
       <action name="getUser" class="com.lanyuan.actionapi.userlogin.SelectUserById" method="getUser"></action>  
       
       <!-- 根据用户ID获取该人的权限 -->
       <action name="getLimits" class="com.lanyuan.actionapi.userlogin.ISelectUserLimit" method="getLimits"></action> 
               
       <!-- 手机端、C#端的退出登录 -->        
       <action name="quit" class="com.lanyuan.actionapi.userlogin.AdroidQuitAction" method="quit"></action> 
       
       <!-- 根据userId判断是否有登陆后台的权限 -->
       <action name="getLoginLimit" class="com.lanyuan.actionapi.userlogin.SelectUserById" method="getLoginLimit"></action> 
        <!-- 修改密码 -->
       <action name="changepwd" class="com.lanyuan.actionapi.userlogin.IModifyPwd" method="changePwd">
       </action>
    </package>
     
    <!-- 系统用户管理 -->
    <package name="user" namespace="/user" extends="GlobalInterceptor">
       <action name="show" class="com.lanyuan.actionapi.commonmodule.user.UserListAction">
           <interceptor-ref name="GlobalInterceptorStack" />
           <result name="success">/systemuser/user_list.jsp</result>
       </action>     
       
       <action name="loadData" class="com.lanyuan.actionapi.commonmodule.user.UserListAction" method="loadData"></action>     

       <!-- 跳转到添加 、修改的页面 -->
       <action name="to*Page" class="com.lanyuan.actionapi.commonmodule.user.OperatePageAction" method="{1}">
          <result name="success">/systemuser/user_add.jsp</result>
       </action>
       
       <!-- 处理 添加、修改、删除 、开启、停用 、重置密码等  页面 提交的数据 -->
       <action name="*User" class="com.lanyuan.actionapi.commonmodule.user.OperateSaveAction" method="{1}"></action>
       
       <!-- 详情页 -->
        <action name="todetailPage" class="com.lanyuan.actionapi.commonmodule.user.OperatePageAction" method="detail">
          <result name="success" >/systemuser/user_detail.jsp</result>
       </action>
       
    </package>   
     
</struts>