<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
<package name="unit" namespace="/unit" extends="GlobalInterceptor">
       <!-- 显示列表 -->
       <action name="show" class="com.lanyuan.actionapi.commonmodule.unit.UnitListAction">
           <interceptor-ref name="GlobalInterceptorStack" />
           <result name="success">/systemuser/unit/unit_list.jsp</result>
       </action>
       <!-- 加载数据 -->
       <action name="loadData" class="com.lanyuan.actionapi.commonmodule.unit.UnitListAction" method="loadData"></action>
       
        <!-- 跳转到单位的添加 、修改的页面 -->
       <action name="to*Unit" class="com.lanyuan.actionapi.commonmodule.unit.UnitEditAction" method="{1}">
          <result name="success">/systemuser/unit/unit_add.jsp</result>
       </action>
       
       <!-- 处理 添加、修改、删除 、开启、停用  的 页面 提交的数据 -->
       <action name="*Unit" class="com.lanyuan.actionapi.commonmodule.unit.UnitSaveAction" method="{1}"></action>
       
       <!-- 查看用户 -->
       <action name="showUser" class="com.lanyuan.actionapi.commonmodule.user.UserListAction">
           <result name="success">/systemuser/unit/look_user.jsp</result>
       </action>
       <!-- 以树形结构加载所有部门 -->
       <action name="loadUnitMap" class="com.lanyuan.actionapi.commonmodule.user.LoadUnitMap" method="loadUnitMap"></action>
       
       <!-- 跳转到 -->
        <action name="skipToEnterprise" class="com.lanyuan.actionapi.commonmodule.unit.UnitEditAction" method="toEnterpriseUpdate">
          <result name="success">/systemuser/unit/enterpriseUpdate.jsp</result>
       </action>
       
    </package>
</struts>