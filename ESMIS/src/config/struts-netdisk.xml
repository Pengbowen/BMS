<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<package name="netdisk" namespace="/netdisk" extends="GlobalInterceptor">
		<!-- 跳转知识库列表后台页面 -->
		<action name="show"
			class="com.lanyuan.actionapi.netdisk.ISearchListNetDiskAction">
			<result name="success">/netdisk/netdisk_list.jsp</result>
		</action>
		<!-- 跳转知识库列表前台页面 -->
		<action name="showReception"
			class="com.lanyuan.actionapi.netdisk.ISearchListNetDiskReceptionAction">
			<result name="success" type="json"></result>
		</action>
		<!-- 父级目录为100时,执行的查询  -->
		<action name="searchByAll"
			class="com.lanyuan.actionapi.netdisk.ISearchByAllAction">
			<result name="success" type="json"></result>
		</action>
		<!-- 新增目录 -->
		<action name="addParentObject"
			class="com.lanyuan.actionapi.netdisk.IAddParentObjectNetDiskAction"
			method="addParentObject">
			<result name="success" type="json"></result>
		</action>

		<!-- 修改文件，文件夹 -->
		<action name="modifyNetDisk"
			class="com.lanyuan.actionapi.netdisk.IModifyNetDiskAction" method="modifyNetDisk">
			<result name="success" type="json"></result>
		</action>

		<!-- 删除文件，文件夹 -->
		<action name="deleteNetDisk"
			class="com.lanyuan.actionapi.netdisk.IDeleteNetDiskAction" method="deleteNetDisk">
			<result name="success" type="json"></result>
		</action>

		<!-- 根据对象编号查看文件详情 -->
		<action name="detailNetDisk"
			class="com.lanyuan.actionapi.netdisk.IDetailNetDiskAction" method="detailNetDisk">
			<result name="success">/netdisk/netdisk_detail.jsp</result>
		</action>

		<!-- 根据文件编号，下载文件 -->
		<action name="downloadNetDisk"
			class="com.lanyuan.actionapi.netdisk.IDownloadNetDiskAction" method="downloadNetDisk">
		</action>

		<!-- 根据文件编号查找文件名 -->
		<action name="searchByNo"
			class="com.lanyuan.actionapi.netdisk.ISearchNameByNoAction">
			<result name="success" type="json"></result>
		</action>
	</package>
</struts>
