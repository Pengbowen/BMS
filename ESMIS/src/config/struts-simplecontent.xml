<!-- <?xml version="1.0" encoding="UTF-8"?> -->
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<!-- 企业方针目标 -->
	<package name="simplecontent" namespace="/simplecontent" extends="GlobalInterceptor">
	
		<!-- 跳转修改页面-->
		<action name="skipToUpdate" class="com.lanyuan.actionapi.simplecontent.ISimplecontentUpdate" >
			<result name="success">/simplecontent/simplecontentUpdate.jsp</result>
		</action>
		
		<!-- 跳转修改页面-->
		<action name="skipToDetail" class="com.lanyuan.actionapi.simplecontent.ISimplecontentUpdate" >
			<result name="success">/simplecontent/simplecontentForFront.jsp</result>
		</action>
		
		<!-- 修改 -->
		<action name="simplecontentToUpdate" class="com.lanyuan.actionapi.simplecontent.ISimplecontentUpdate" method="update">
			<result name="success" type="json"></result>
			<result name="error" type="json"></result>
		</action>
	</package>
</struts>