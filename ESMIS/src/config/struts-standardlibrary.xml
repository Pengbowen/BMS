<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<package name="standardlibrary" namespace="/standardlibrary" extends="GlobalInterceptor">
	   <!-- 显示标准总库主列表 -->
	   <action name="showStandardLibrary" class="com.lanyuan.actionapi.standardlibrary.IShowListAction">
           <result name="success" type="json">/standardlibrary/standardList.jsp</result>
       </action> 
		<!-- 显示后台查询标准页面-->
		<action name="searchStandard" class="com.lanyuan.actionapi.standardlibrary.ISearchStandardlibraryAction" method="searchStandardlibrary">
			<result name="success" type="json"></result>
		</action>
		<!-- 移动端资源法律查询-->
		<action name="searchLawsToPhone" class="com.lanyuan.actionapi.standardlibrary.ISearchLawsToPhone" method="searchToPhone">
			<result name="success" type="json"></result>
		</action>
		<!-- 移动端下载标准 -->
        <action name="downloadToPhone" class="com.lanyuan.actionapi.standardlibrary.IDownloadToPhone" method="down">
			<result name="success" type="stream">
     	    </result>
     	</action>
     	<!-- 移动端标准动态-->
		<action name="StandardDynamicToPhone" class="com.lanyuan.actionapi.standardlibrary.ISearchStandardDynamicToPhone">
			<result name="success" type="json"></result>
		</action>
		<!-- 删除标准（standardId或standardNo） -->
		<action name="deleteStandard" class="com.lanyuan.actionapi.standardlibrary.IDeleteStandardlibraryAction" method="deleteStandardlibrary">
			<result name="success" type="json"></result>
		</action>
		<!-- 修改 -->
		<action name="modifyStandard" class="com.lanyuan.actionapi.standardlibrary.IModifyStandarlibraryAction" method="modifyStandard">
			<result name="success" type="json"></result>
		</action>
		<!-- 显示添加/页面 -->
		<action name="showAddStandard" class="com.lanyuan.actionapi.standardlibrary.IShowListAction">
		 <interceptor-ref name="GlobalInterceptorStack" />
		<result name="success">/standardlibrary/standard.jsp</result></action>
		<!-- 根据StandardId或StandardNo显示详情-->
		<action name="showStandardDetail" class="com.lanyuan.actionapi.standardlibrary.IShowStandardDetailAction" method="showLawsDetail">
			<result name="success">/standardlibrary/standardShowDetail.jsp</result>
		</action>
	
		<!-- 修改操作接口-->
		<action name="operatorStandard" class="com.lanyuan.actionapi.standardlibrary.IOperatorStandardAction" method="operatorStand">
		    <result name="success">/standardlibrary/standard.jsp</result>
		</action>
		<!-- 升级入库操作接口-->
		<action name="operatorUpGradeStandard" class="com.lanyuan.actionapi.standardlibrary.IOperatorUpGradeStandardAction" method="operatorUpGradeLaws">
		    <result name="success">/standardlibrary/standardAddByUpgrade.jsp</result>
		</action>
	
		<!-- 手动入库 -->
		<action name="addStandardByMananl" class="com.lanyuan.actionapi.standardlibrary.IAddStandardlibraryByMananlAction" method="addStandard">
			<result name="success" type="json"></result>
		</action>
		<!-- 显示标准总库统计页面-->
		<action name="showNumericalStatementStandard" class="com.lanyuan.actionapi.standardlibrary.INumericalStatementStandard" >
			<result name="success">/statistics/standardLibraryCount.jsp</result>
		</action>
		<!-- 标准总库统计-->
		<action name="showStatementStandard" class="com.lanyuan.actionapi.standardlibrary.INumericalStatementStandard" method="showStatement">
			<result name="success" type="json"></result>
		</action>
      <!-- 下载标准 -->
       <action name="downLoad" class="com.lanyuan.actionapi.standardlibrary.IDownloadStandard" method="downLoad">
			<result name="success" type="stream">
        	<!-- 指定下载文件的缓冲大小 -->
        	<param name="bufferSize">1024</param>
      </result>
      </action>
      <!-- 显示前台标准精准查询页面 -->
      <action name="frontSearchStandard" class="com.lanyuan.actionapi.standardlibrary.IShowListAction">
       <result name="success">/standardlibrary/frontPageSearchStandard.jsp</result>
      </action>
      <!-- 显示前台智能查询标准页面  -->
      <action name="frontLinkSearchStandard" class="com.lanyuan.actionapi.standardlibrary.IShowLikeSearchAction">
       <result name="success">/standardlibrary/frontLikeSearchStandard.jsp</result>
      </action>
        <!-- 显示前台标准查询结果页面  -->
      <action name="frontShowDetailStandard" class="com.lanyuan.actionapi.standardlibrary.IShowStandardDetailAction" method="showLawsDetail">
       <result name="success">/standardlibrary/frontDetailStandard.jsp</result>
      </action>
        <!-- 显示前台体系表统计页面  -->
      <action name="frontStatementSST" class="com.lanyuan.actionapi.sst.standardlist.ISystemTableStatistics" method="showTotalCount">
       <result name="success">/statistics/frontSSTCount.jsp</result>
      </action>
 	 <!-- 全屏显示查询页面  -->
      <action name="frontAllPage" class="com.lanyuan.actionapi.standardlibrary.IShowStandardDetailAction" method="showLawsDetail">
       <result name="success">/standardlibrary/frontAllPage.jsp</result>
      </action>
 	 <!-- 智能查询  -->
      <action name="frontLikeSearch" class="com.lanyuan.actionapi.standardlibrary.ILikeSearchStandard" method="searchStandardlibrary">
       <result name="success" type="json"></result>
      </action>
		<!-- 批量下载 -->
      <action name="batchDownload" class="com.lanyuan.actionapi.standardlibrary.IBatchDownloadAction" method="download">
        <result name="error">/standardlibrary/error.jsp</result>
      </action>
      	<!-- 批量查询标准-->
		<action name="searchMoreStandard" class="com.lanyuan.actionapi.standardlibrary.IStandardMoreSearch" >
			<result name="success" type="json"></result>
		</action>
		
      <!-- 跳转到标准详情界面 -->
      <action name="toStandardDetail" class="com.lanyuan.actionapi.standardlibrary.ISearchRelatedStandard"  >
      <result name = "success">/SST/face/standardDetail.jsp</result>
      <!-- <result name="success">/SST/face/standardDetail.jsp</result> -->
      <result name="error">/SST/face/noFile.jsp</result>
      </action>
      <!-- 加载文件目录 -->
	<action name="loadList" class="com.lanyuan.actionapi.standardlibrary.ISearchRelatedStandard"  method="getList">
	<result name="success" type="json"></result>
	</action>      
      <!-- 查询替代标准 -->
      <action name="searchReplaceStandard" class="com.lanyuan.actionapi.standardlibrary.ISearchRelatedStandard" method="searchReplaceStandard">
			<result name="success" type="json"></result>
		</action>
      <!-- 查询相关标准 -->
      <action name="searchSeriesStandard" class="com.lanyuan.actionapi.standardlibrary.ISearchRelatedStandard" method="searchSeriesStandard">
			<result name="success" type="json"></result>
		</action>
      <!-- 查询同体系表标准 -->
      <action name="searchSSTStandard" class="com.lanyuan.actionapi.standardlibrary.ISearchRelatedStandard" method="searchSSTStandard">
			<result name="success" type="json"></result>
	  </action>
	  <!-- 测试加载pdf -->
	  <action name="readPdf" class="com.lanyuan.actionapi.sst.face.IShowFileDetailAction">
	  	<result name="success" type="json"></result>
	  </action>
	  
	  <!-- 测试加载html -->
	  <action name="testHtml" class="com.lanyuan.actionapi.sst.face.IShowFileDetailAction" method="showHtml">
	    <result name="success" >/uploadfiles/110002/html/110002741.html</result>
	   <result name="error">/SST/face/noFile.jsp</result>
	  </action>
	  <!-- 测试独立加载html -->
	     <!-- 跳转到标准详情界面 -->
      <action name="toStandardDetail1" class="com.lanyuan.actionapi.standardlibrary.ISearchRelatedStandard"  >
      <result name="success">/SST/face/standardDetail2.jsp</result>
      <result name="error">/SST/face/noFile.jsp</result>
      </action>
      <!-- 单个下载 -->
       <action name="downloadOne" class="com.lanyuan.actionapi.standardlibrary.IBatchDownloadAction" method="downloadOne"  >
      </action>
	</package>
</struts>
