<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.lanyuan.assembly.query.count.DAOSearchWordCount">
	<insert id="insert" parameterType="com.lanyuan.assembly.query.count.EntitySearchWordCount">
		insert into lysoft_word_count
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="countid != null">
				countid,
			</if>
			<if test="word != null">
				word,
			</if>
			<if test="count != null">
				count,
			</if>
			<if test="type != null">
				type
			</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides=",">
			<if test="countid != null">
				#{countid},
			</if>
			<if test="word != null">
				#{word},
			</if>
			<if test="count != null">
				#{count},
			</if>
			<if test="type != null">
				#{type}
			</if>
		</trim>
	</insert>
	
	<!-- 根据词语查询是否存在 -->
	<select id="selectWordCountByWord" parameterType="string" resultType="com.lanyuan.assembly.query.count.EntitySearchWordCount">
		SELECT countid,word,count  FROM lysoft_word_count WHERE word=#{word}
	</select>
	
	<!-- 批量添加分词统计 -->
	<insert id="insertWordCountList" parameterType="java.util.List">
		insert into lysoft_word_count 
	    (word,count,type)
	    values   
	      <foreach collection="list" item="item" index="index"  separator=",">  
	          (#{item.word},
	          #{item.count},
	          #{item.type})
	      </foreach>  
	</insert>
	
	<!-- 批量更新分词统计 -->
	<update id="updateWordCountList" parameterType="java.util.List">
		 <foreach collection="list" item="items" index="index"  separator=";">  
		 	UPDATE lysoft_word_count
		 	<set>
		 		count = count + #{items.count}
		 	</set>
		 	WHERE countid = #{items.countid}
		 </foreach>
	</update>
</mapper>
