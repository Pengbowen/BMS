<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.lanyuan.assembly.standardrepor.DaoStandardReport">
	<resultMap id="BaseResultMap" type="com.lanyuan.assembly.standardrepor.EntityStandardReport">
		<id column="reportId" property="reportId" jdbcType="VARCHAR" />
		<result column="standardCategory" property="standardCategory" jdbcType="VARCHAR" />
		<result column="standardCategoryName" property="standardCategoryName" jdbcType="VARCHAR" />
		<result column="displayOrder" property="displayOrder" jdbcType="INTEGER" />
		<result column="itemId" property="itemId" jdbcType="VARCHAR" />
		<result column="quantity" property="quantity" jdbcType="INTEGER" />
	</resultMap>
	<sql id="Base_Column_List">
		reportId,standardCategory,displayOrder,itemId,quantity,standardCategoryName
	</sql>

	<insert id="insert" parameterType="com.lanyuan.assembly.standardrepor.EntityStandardReport">
		insert into lysoft_standardreport
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="reportId != null">
				reportId,
			</if>
			<if test="standardCategory != null">
				standardCategory,
			</if>
			<if test="standardCategoryName != null">
				standardCategoryName,
			</if>
			<if test="displayOrder != null">
				displayOrder,
			</if>
			<if test="itemId != null">
				itemId,
			</if>
			<if test="quantity != null">
				quantity,
			</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides=",">
			<if test="reportId != null">
				#{reportId,jdbcType=VARCHAR},
			</if>
			<if test="standardCategory != null">
				#{standardCategory,jdbcType=VARCHAR},
			</if>
			<if test="standardCategoryName != null">
				#{standardCategoryName,jdbcType=VARCHAR},
			</if>
			<if test="displayOrder != null">
				#{displayOrder,jdbcType=INTEGER},
			</if>
			<if test="itemId != null">
				#{itemId,jdbcType=VARCHAR},
			</if>
			<if test="quantity != null">
				#{quantity,jdbcType=INTEGER},
			</if>
		</trim>
	</insert>
	<update id="update" parameterType="com.lanyuan.assembly.standardrepor.EntityStandardReport" >
    update lysoft_standardreport
    <set >
      <if test="reportId != null">
				reportId=#{reportId,jdbcType=VARCHAR},
			</if>
			<if test="standardCategory != null">
				standardCategory=#{standardCategory,jdbcType=VARCHAR},
			</if>
			<if test="standardCategoryName != null">
				standardCategoryName=#{standardCategoryName,jdbcType=VARCHAR},
			</if>
			<if test="displayOrder != null">
				displayOrder=#{displayOrder,jdbcType=INTEGER},
			</if>
			<if test="itemId != null">
				itemId=#{itemId,jdbcType=VARCHAR},
			</if>
			<if test="quantity != null">
				quantity=#{quantity,jdbcType=INTEGER},
			</if>
    </set>
    where reportId = #{reportId,jdbcType=INTEGER}
  </update>
 <delete id="deleteById" parameterType="java.lang.String" >
    delete from lysoft_standardreport
    where reportId = #{reportId,jdbcType=VARCHAR}
  </delete>
  
   <insert id="insertbatch" parameterType="java.util.List">  
      insert into lysoft_standardreport
      (reportId,standardCategory,standardCategoryName,displayOrder,itemId,quantity)
      values   
   <foreach collection="list" item="item" index="index"  separator=","> 
      (#{item.reportId},
      #{item.standardCategory},
      #{item.standardCategoryName},
      #{item.displayOrder},
      #{item.itemId},
      #{item.quantity})
     </foreach> 
  </insert>  
  
  <!-- 通过reportId 查询统计表 -->
  <select id="selectByReportId" resultMap="BaseResultMap"  parameterType="java.lang.String" >
  SELECT * from lysoft_standardreport where reportId = #{reportId,jdbcType=VARCHAR}
  </select>
  
</mapper>