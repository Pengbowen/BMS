<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.lanyuan.assembly.query.wordLog.DAOSearchWordLog">
	<insert id="insert" parameterType="com.lanyuan.assembly.query.wordLog.EntitySearchWordLog">
		insert into lysoft_word_log
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="wordLogid != null">
				wordLogid,
			</if>
			<if test="logid != null">
				logid,
			</if>
			<if test="word != null">
				word,
			</if>
			<if test="isSynonym != null">
				isSynonym,
			</if>
			<if test="searchTime != null">
				searchTime,
			</if>
			<if test="type != null">
				type
			</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides=",">
			<if test="wordLogid != null">
				#{wordLogid},
			</if>
			<if test="logid != null">
				#{logid},
			</if>
			<if test="word != null">
				#{word},
			</if>
			<if test="isSynonym != null">
				#{isSynonym},
			</if>
			<if test="searchTime != null">
				#{searchTime},
			</if>
			<if test="type != null">
				#{type}
			</if>
		</trim>
	</insert>
	
	<select id="selectWord" parameterType="java.lang.String" resultType="com.lanyuan.assembly.query.wordLog.EntitySearchWordLog">
		SELECT * from lysoft_word_log WHERE searchtime LIKE CONCAT(#{searchTime},'%') GROUP BY word
	</select>
	
	<select id="selectWordCount" parameterType="map" resultType="int">
		SELECT COUNT(wordLogid) from lysoft_word_log WHERE  word=#{word} AND searchtime LIKE CONCAT(#{searchTime},'%')
	</select>
	<!-- 批量插入 -->
	<insert id="insertWordLogList" parameterType="java.util.List">
		insert into lysoft_word_log
		(wordLogid,logid,word,isSynonym,searchTime,type)
		values
		<foreach collection="list" item="item" index="index" separator=",">
			(
				#{item.wordLogid},
				#{item.logid},
				#{item.word},
				#{item.isSynonym},
				#{item.searchTime},
				#{item.type}
			)
		</foreach>
		
	</insert>
</mapper>
